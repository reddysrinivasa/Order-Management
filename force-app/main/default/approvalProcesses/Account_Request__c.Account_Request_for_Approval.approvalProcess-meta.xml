<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>BillingCity__c</field>
        <field>BillingCountry__c</field>
        <field>BillingPostalCode__c</field>
        <field>BillingState__c</field>
        <field>BillingStreet__c</field>
        <field>DOB__c</field>
        <field>Description__c</field>
        <field>Email__c</field>
        <field>Phone__c</field>
        <field>ShippingCity__c</field>
        <field>ShippingCountry__c</field>
        <field>ShippingPostalCode__c</field>
        <field>ShippingState__c</field>
        <field>ShippingStreet__c</field>
        <field>Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_Mail</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>VP_Queues</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit to VP for Approval</label>
        <name>Submit_to_VP_for_Approval</name>
        <rejectionActions>
            <action>
                <name>Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejection_Alert_Email_to_Customer</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_Alert_To_Customer</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Send_Mail_to_VP</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Account Request for Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
